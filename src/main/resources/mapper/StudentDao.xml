<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.welcome1.dao.StudentDao">


    <select id="findBySid" parameterType="java.lang.String" resultType="com.example.welcome1.entity.Student">
        select sid, uid, cid, sexamid, did, colloge, political, pid, ssex, sage, sname, sadress, sphone, semail, spname, spphone, stype
        from student
        where sid=#{sid}
    </select>
    <update id="setStudent" parameterType="com.example.welcome1.entity.Student" >
        update student
        <set >
            <if test="sid != null">
                sid = #{sid},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="sexamid != null">
                sexamid = #{sexamid},
            </if>
            <if test="did != null">
                did = #{did},
            </if>
            <if test="colloge != null">
                colloge = #{colloge},
            </if>
            <if test="political != null">
                political = #{political},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="ssex != null">
                ssex = #{ssex},
            </if>
            <if test="sage != null">
                sage = #{sage},
            </if>
            <if test="sname != null">
                sname = #{sname},
            </if>
            <if test="sadress != null">
                sadress = #{sadress},
            </if>
            <if test="sphone != null">
                sphone = #{sphone},
            </if>
            <if test="semail != null">
                semail = #{semail},
            </if>
            <if test="spname != null">
                spname = #{spname},
            </if>
            <if test="spphone != null">
                spphone = #{spphone},
            </if>
            <if test="stype != null">
                stype = #{stype},
            </if>
        </set>
        where sid = #{sid}
    </update>

</mapper>